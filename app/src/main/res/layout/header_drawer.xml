<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/statusBarHeight"
    android:layout_height="@dimen/header_drawer_height">

    <br.com.sumone.sumonetwitter.widget.CircularImageView
        android:id="@+id/imageViewProfile"
        android:layout_margin="@dimen/view_default_padding"
        android:layout_width="@dimen/profile_image"
        android:layout_height="@dimen/profile_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_margin="@dimen/view_default_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/textViewUserName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/textViewTwitterName"
            android:layout_alignParentStart="true" />

    </LinearLayout>



</RelativeLayout>